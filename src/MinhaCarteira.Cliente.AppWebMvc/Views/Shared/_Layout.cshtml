<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MinhaCarteira.Cliente.AppWebMvc</title>
    <environment include="Development">
        <link rel="icon" type="image/x-icon" href="/favicon.ico">
    </environment>
    <environment include="Production">
        <link rel="icon" type="image/x-icon" href="/minhacarteira/favicon.ico">
    </environment>

    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/hot-sneaks/jquery-ui.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Raleway&display=swap&text=dhaniprojetos" rel="stylesheet">

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar fixed-top navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img class="d-none d-sm-inline" src="~/img/dhani.png" />
                    <img class="d-inline d-sm-none" src="~/img/dhani_mini.png" />
                    <span class="navbar-brand d-inline d-xl-inline d-sm-none align-middle"
                          style="font-family: 'Raleway', sans-serif;">dhani projetos</span>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="MovimentoBancario" asp-action="Index">Movimento</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Agendamento" asp-action="Index">Agendamento</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="btn dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Módulos
                            </a>

                            <ul class="dropdown-menu" aria-labelledby="navbarDarkDropdownMenuLink">
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Pessoa" asp-action="Index">Pessoa</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="InstituicaoFinanceira" asp-action="Index">Instituição</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="ContaBancaria" asp-action="Index">Conta Bancaria</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Categoria" asp-action="Index">Categoria</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="CentroClassificacao" asp-action="Index">Centro de Classificação</a>
                                </li>
                            </ul>
                        </li>
                    </ul>

                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity is not { IsAuthenticated: true })
                        {
                            <li>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Conta" asp-action="Logar">Login</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item dropdown">
                                <a class="btn dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fa-solid fa-user"></i>
                                    @User.Identity.Name
                                </a>

                                <ul class="dropdown-menu" aria-labelledby="navbarDarkDropdownMenuLink">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Conta" asp-action="Sair">Sair</a></li>
                                </ul>
                            </li>
                        }
                    </ul>


                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - MinhaCarteira.Cliente.AppWebMvc - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    @if (!String.IsNullOrWhiteSpace(Context.Request.PathBase.Value))
    {
        <script type="text/javascript">
            /* LIVE - includes virtual directory */
            window.siteRoot = "@Context.Request.Scheme" + "://" + "@Context.Request.Host.Value" + "@Context.Request.PathBase.Value" + "/";
        </script>
    }
    else
    {
        <script type="text/javascript">
            /* DEBUG - no virutal directory, e.g. IIS Express */
            window.siteRoot = "@Context.Request.Scheme" + "://" + "@Context.Request.Host.Value" + "/";
        </script>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/font-awesome/js/all.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/someeRemoveAds.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
