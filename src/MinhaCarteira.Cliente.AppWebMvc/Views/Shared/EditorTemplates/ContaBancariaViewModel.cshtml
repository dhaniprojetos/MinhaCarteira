@model MinhaCarteira.Cliente.AppWebMvc.Models.ContaBancariaViewModel

@{
    ViewData["Title"] = "ContaBancariaViewModel";
}

<div class="col-md-12">
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group col-md-3">
            <label asp-for="Id" class="control-label"></label>
            <input asp-for="Id" class="form-control" disabled />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <div class="form-group col-md-9">
            <label asp-for="IdInstituicaoFinanceira" class="control-label"></label>
            <input type="hidden" asp-for="IdInstituicaoFinanceira" class="form-control" />
            <input id="txtInstituicao" asp-for="InstituicaoFinanceira.Nome" class="form-control" />
            <span asp-validation-for="IdInstituicaoFinanceira" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-5">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="Agencia" class="control-label"></label>
            <input asp-for="Agencia" class="form-control" />
            <span asp-validation-for="Agencia" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Conta" class="control-label"></label>
            <input asp-for="Conta" class="form-control" />
            <span asp-validation-for="Conta" class="text-danger"></span>
        </div>
    </div>
</div>

<hr />
<div class="form-group">
    <input type="submit" value="Salvar" class="btn btn-primary" />
</div>
