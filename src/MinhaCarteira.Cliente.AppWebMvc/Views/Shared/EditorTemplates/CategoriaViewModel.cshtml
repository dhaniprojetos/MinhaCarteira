@model MinhaCarteira.Cliente.AppWebMvc.Models.CategoriaViewModel

@{
    ViewData["Title"] = "CategoriaViewModel";
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="row">
    <div class="form-group col-md-3">
        <label asp-for="Id" class="control-label"></label>
        <input asp-for="Id" class="form-control" disabled />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <div class="form-group col-md-3">
        <label asp-for="IdAuxiliar" class="control-label"></label>
        <input asp-for="IdAuxiliar" class="form-control" />
        <span asp-validation-for="IdAuxiliar" class="text-danger"></span>
    </div>
</div>

<div class="row">
    <div class="form-group col-md 6">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group col-md 6">
        <label asp-for="IdCategoriaPai" class="control-label"></label>
        <input type="hidden" asp-for="IdCategoriaPai" class="form-control" />
        <div class="input-group">
            <input id="edtCategoriaNome" asp-for="NomeCategoriaPai" class="form-control" />
            <div class="input-group-append">
                <span class="input-group-text">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"></path>
                    </svg>
                </span>
            </div>
        </div>
        <span asp-validation-for="IdCategoriaPai" class="text-danger"></span>
    </div>
</div>

<hr />
<div class="form-group">
    <input type="submit" value="Salvar" class="btn btn-primary" />
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
