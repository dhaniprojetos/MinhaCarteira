@model MinhaCarteira.Cliente.AppWebMvc.Models.CategoriaViewModel

@{
    ViewData["Title"] = "CategoriaViewModel";
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="row">
    <div class="form-group col-md-3">
        <label asp-for="Id" class="control-label"></label>
        <input asp-for="Id" class="form-control" disabled />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <div class="form-group col-md-3">
        <label asp-for="IdAuxiliar" class="control-label"></label>
        <input asp-for="IdAuxiliar" class="form-control" />
        <span asp-validation-for="IdAuxiliar" class="text-danger"></span>
    </div>
</div>

<div class="row">
    <div class="form-group col-md 6">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group col-md 6">
        <label asp-for="IdCategoriaPai" class="control-label"></label>
        <input type="hidden" asp-for="IdCategoriaPai" class="form-control" />
        <input id="edtCategoriaNome" asp-for="NomeCategoriaPai" class="form-control" />
        <span asp-validation-for="IdCategoriaPai" class="text-danger"></span>
    </div>
</div>

<hr />
<div class="form-group">
    <input type="submit" value="Salvar" class="btn btn-primary" />
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
