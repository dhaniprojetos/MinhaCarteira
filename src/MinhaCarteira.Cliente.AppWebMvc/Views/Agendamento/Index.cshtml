@model IEnumerable<MinhaCarteira.Cliente.Recursos.Models.AgendamentoItemViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@{await Html.RenderPartialAsync("_PartialAlertas");}

<p>
    <a asp-action="Criar">Create New</a>
</p>
<table class="table table-hover table-responsive-sm">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Agendamento.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Agendamento.Categoria.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Agendamento.NomeCentroClassificacao)
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="@(item.ContaVencida ? "table-warning" : "")">
                <td class="align-middle p-0 pl-2" style="width: 50px;">
                    <img src="data:@item.Agendamento.Categoria.MimeType;base64,@item.Agendamento.Categoria.IconeCategoria"
                         title="@item.Agendamento.Categoria.Nome"
                         height="42" width="42"
                         asp-append-version="true" />
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Data)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Agendamento.Descricao)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Valor)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Pessoa.Nome)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Agendamento.NomeCentroClassificacao)
                </td>
                <td class="align-middle" style="width: 160px;">
                    <a title="Alterar" class="btn btn-outline-primary p-0 pt-1 pb-1" style="width: 40px;" asp-action="Alterar" asp-route-id="@item.AgendamentoId">
                        <i class="fa-solid fa-lg fa-pen-to-square"></i>
                    </a>
                    <a title="Detalhes" class="btn btn-outline-success p-0 pt-1 pb-1" style="width: 40px;" asp-action="Detalhes" asp-route-id="@item.AgendamentoId">
                        <i class="fa-solid fa-lg fa-info-circle"></i>
                    </a>
                    <a title="Remover" class="btn btn-outline-danger p-0 pt-1 pb-1" style="width: 40px;" asp-action="Deletar" asp-route-id="@item.AgendamentoId">
                        <i class="fa-solid fa-lg fa-trash-can"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
