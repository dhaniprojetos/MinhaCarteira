@model IEnumerable<MinhaCarteira.Cliente.AppWebMvc.Models.InstituicaoFinanceiraViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@{await Html.RenderPartialAsync("_PartialAlertas");}

<p>
    <a asp-action="Criar">Create New</a>
</p>
<table class="table table-responsive-sm">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @if (!string.IsNullOrWhiteSpace(item.Icone))
                    {
                        <img src="data:@item.MimeType;base64,@item.Icone"
                             height="32" width="32"
                             asp-append-version="true" />
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.ActionLink("Alterar", "Alterar", new { id = item.Id }) |
                    @Html.ActionLink("Detalhes", "Detalhes", new { id = item.Id }) |
                    @Html.ActionLink("Deletar", "Deletar", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
