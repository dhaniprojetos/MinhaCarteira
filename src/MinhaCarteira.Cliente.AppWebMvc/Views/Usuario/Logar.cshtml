@model MinhaCarteira.Cliente.Recursos.Models.UsuarioLoginViewModel

@{
    ViewData["Title"] = "Logar";
}

<h1>Logar</h1>
@{await Html.RenderPartialAsync("_PartialAlertas");}

<h4>ContaViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Logar" asp-route-returnurl="@ViewBag.ReturnUrl">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Usuario" class="form-label"></label>
                <input asp-for="Usuario" class="form-control" />
                <span asp-validation-for="Usuario" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Senha" class="form-label"></label>
                <input type="Password" asp-for="Senha" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
