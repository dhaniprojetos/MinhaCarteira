    ViewData["Icone"] = "<i class='fa fa-credit-card fa-lg text-primary'></i>";
}

<h1>Deletar</h1>
<h3>Tem certeza que deseja remover este registro?</h3>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(m => m.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(m => m.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(m => m.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(m => m.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(m => m.Agencia)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(m => m.Agencia)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(m => m.Conta)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(m => m.Conta)
